<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="backgroundHomeScreen" parent="@style/AppTheme">
        <item name="android:background">@drawable/background_home_screen</item>
    </style>

    <style name="styleButton" parent="@style/AppTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/border_black</item>
    </style>

    <style name="descriptionText" parent="@style/AppTheme">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>

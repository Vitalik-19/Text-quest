<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home_screen.HomeFragment">


    <ImageView
        android:id="@+id/home_fragment_image_logo_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="45dp"
        android:src="@mipmap/ic_launcher_round" />

    <Button
        android:id="@+id/home_fragment_button_new_game"
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/home_fragment_button_new_game_text"
        android:textSize="24sp" />

    <Button
        android:id="@+id/home_fragment_button_continue"
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/home_fragment_button_continue_text"
        android:textSize="24sp" />

    <Button
        android:id="@+id/home_fragment_button_settings"
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/home_fragment_button_settings_text"
        android:textSize="24sp" />

    <Button
        android:id="@+id/home_fragment_button_authors"
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/home_fragment_button_authors_text"
        android:textSize="24sp" />

    <Button
        android:id="@+id/home_fragment_button_exit"
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/home_fragment_button_exit_text"
        android:textSize="24sp" />

</LinearLayout>
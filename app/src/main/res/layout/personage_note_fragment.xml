<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/backgroundHomeScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".ui.personage_note_screen.PersonageNoteFragment">

    <ImageView
        android:id="@+id/personage_note_fragment_avatar_personage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/personage_note_fragment_note"
        android:layout_width="350dp"
        android:layout_height="340dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="24sp"
        tools:text="Описание" />

    <Button
        android:id="@+id/personage_note_fragment_button_start"
        style="@style/borderButton"
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:text="@string/personage_note_fragment_button_start_text"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>